@model UsersListViewModel

@if (Model.Users.Count > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Phone number</th>
                <th>Role</th>
                @if (User.IsInRole("Admin"))
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.ApplicationUserRole.FirstOrDefault().Role.Name</td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <button class="btn btn-sm btn-warning" onclick="showEmployeeEditModal('@user.Id')">Edit</button>
                            <button class="btn btn-sm btn-danger" onclick="showEmployeeDeleteModal('@user.Id')">Delete</button>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="lead text-secondary fw-bold mt-3">No employee found!</p>
}